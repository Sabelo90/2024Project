@model UpdateViewModel

@{
    ViewBag.Title = "Manage Profile";
}

<style>
    .sidebar {
        height: 100vh;
    }

    .ImagesColor {
        color: #1a2b3c;
    }

    i {
        color: #007bff;
    }

    .sidebar h4 {
        font-weight: bold;
    }

    .sidebar .nav-link {
        font-size: 1.1rem;
        font-weight: 500;
        padding: 15px 20px;
        color: #333;
    }

        .sidebar .nav-link.active {
            background-color: #eaf3e2;
            color: #333;
            font-weight: bold;
        }

    .card {
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .search-bar input {
        border-radius: 30px;
        padding-left: 15px;
        width: 250px;
    }

    .card-body {
        position: relative;
    }

        .card-body .card-title {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .card-body .card-text {
            color: #555;
        }

        .card-body .fab, .card-body .fas {
            color: #333;
        }

    .frm {
        max-width: 500px;
        padding: 20px;
    }

    label {
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 20px;
    }


    button.btn-primary,
    a.btn-secondary {
        margin-right: 10px;
    }


</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-2 bg-light sidebar">
            <div class="d-flex align-items-center py-3">
                <i class="fas fa-circle me-2 text-success"></i>
                <h4 class="m-0">Account</h4>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-action="Wallet"><i class="fas fa-wallet me-2"></i> My Wallet</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="UserLogins"><i class="fas fa-chart-line me-2"></i> Log-ins</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link active" asp-action="Account"><i class="fa-solid fa-user"></i> Manage Profile</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-action="Transactions"><i class="fas fa-exchange-alt me-2"></i> Transactions</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Messages"><i class="fas fa-envelope me-2"></i> Messages</a>
                </li>

            </ul>
        </div>
        <div class="col-10 p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4>Hello, @Model.FirstName</h4>
                    <p>You can update profile information</p>
                </div>

            </div>

            <div class="card">

                <section class="container">

                    <div asp-validation-summary=" All" class="text-danger"></div>

                    <form class="frm" asp-action="Account" method="post">
                        <input asp-for="AccountNumber" class="form-control" hidden />
                       
                        <small class="text-muted">You can update profile information</small> <br />
        
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                        </div> 
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                        </div> 
                        <div class="mb-3">
                            <label asp-for="IdNumber" class="form-label"></label>
                            <input asp-for="IdNumber" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="StudentStaffNumber" class="form-label"></label>
                            <input asp-for="StudentStaffNumber" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserRole" class="form-label"></label>
                            <input asp-for="UserRole" class="form-control" />
                        </div>

                        <button type="submit" class="btn btn-primary">Update</button>
                       
                        <a asp-action="Wallet" class="btn btn-secondary">Cancel</a>
                    </form>

                </section>





                </div>
            </div>
        </div>
    </div>
</div>

<script>

    document.querySelector("form").addEventListener("submit", function () {
        const submitButton = this.querySelector("button[type='submit']");
        submitButton.classList.add("btn-loading");
        submitButton.innerHTML = "Updating...";
    });
</script>