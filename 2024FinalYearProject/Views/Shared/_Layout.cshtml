<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - _2024FinalYearProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <!-- Font Awesome -->
    <link asp-href-include="lib/font-awesome/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_2024FinalYearProject.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">UniBank</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="#">About</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">How it Works</a></li>
                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Client" asp-action="Index">
                                    Accont-Dashboard
                                </a>
                            </li>
                        } 
                        @if (User.IsInRole("Consultant"))
                        {
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Consultant" asp-action="Index">
                                    Consultant-Dashboard
                                </a>
                            </li>
                        }  
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link active"  asp-controller="Admin" asp-action="Index">
                                    Advisor-Dashboard
                                </a>
                            </li>
                        }@if (User.IsInRole("Advisor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link active"  asp-controller="FinancialAdvisor" asp-action="Index">
                                    Advisor-Dashboard
                                </a>
                            </li>
                        }
                        <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
                    </ul>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Login" asp-controller="Account" class="btn btn-outline-light ms-2">Sign in</a>
                        <a asp-action="Register" asp-controller="Account" class="btn btn-warning ms-2">Sign up</a>

                    }
                    else
                    {
                        <div style="cursor: pointer;" class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                Hello,
                                @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a asp-action="Logout" asp-controller="Account" class="dropdown-item">Logout</a>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

   
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - _2024FinalYearProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
