@model AppUser

@{
    ViewBag.Title = "Financial Advise Landing Page";
}

<style>
    .image-container {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        height: 100%;
        width: 100%;
        overflow: hidden;
    }

        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .col-10 {
        position: relative;
        height: 100vh;
        padding: 0;
    }

    .main {
        margin-top: 1px;
        height: 100vh;
        width: 100%;
        object-fit: cover;
    }

    .ImagesColor {
        color: #1a2b3c;
    }

    .sidebar {
        height: 100vh;
    }

    i {
        color: #007bff;
    }

    .sidebar h4 {
        font-weight: bold;
    }

    .sidebar .nav-link {
        font-size: 1.1rem;
        font-weight: 500;
        padding: 15px 20px;
        color: #333;
    }

        .sidebar .nav-link.active {
            background-color: #eaf3e2;
            color: #333;
            font-weight: bold;
        }

    .card {
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .search-bar input {
        border-radius: 30px;
        padding-left: 15px;
        width: 250px;
    }

    .card-body {
        position: relative;
    }

        .card-body .card-title {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .card-body .card-text {
            color: #555;
        }

        .card-body .fab, .card-body .fas {
            color: #333;
        }

</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-2 bg-light sidebar">
            <div class="d-flex align-items-center py-3">
                <i class="fas fa-circle me-2 text-success"></i>
                <h4 class="m-0">@Model.FirstName</h4>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" asp-action="Index"><i class="fa-duotone fa-solid fa-table-columns"></i> Dashboard</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-action="Users"> <i class="fa-solid fa-users"></i> Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Reviews"><i class="fa-solid fa-star"></i> Reviews</a>
                </li>

            </ul>
        </div>

        <div class="col-10 p-0">
            <div class="image-container">
                <img class="main" src="~/Images/financial-consultant.jpg" alt="consultant" />
            </div>
        </div>
    </div>
</div>
