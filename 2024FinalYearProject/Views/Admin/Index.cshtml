@using _2024FinalYearProject.Models.ViewModels.Admin
@model IndexPageViewModel

@{
    ViewBag.Title = "Online Banking - User View";
}

<style>

    i {
        color: #007bff;
    }

    .image-container {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        height: 100%;
        width: 100%;
        overflow: hidden;
    }

        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .col-10 {
        position: relative;
        height: 100vh;
        padding: 0;
    }

    .main {
        margin-top: 1px;
        height: 100vh;
        width: 100%;
        object-fit: cover;
    }

    .ImagesColor {
        color: #1a2b3c;
    }

    .sidebar {
        height: 100vh;
    }

    .ImagesColor {
        color: #1a2b3c;
    }

    .sidebar h4 {
        font-weight: bold;
    }

    .sidebar .nav-link {
        font-size: 1.1rem;
        font-weight: 500;
        padding: 15px 20px;
        color: #333;
    }

        .sidebar .nav-link.active {
            background-color: #eaf3e2;
            color: #333;
            font-weight: bold;
        }

    .card {
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .search-bar input {
        border-radius: 30px;
        padding-left: 15px;
        width: 250px;
    }

    .card-body {
        position: relative;
    }

        .card-body .card-title {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .card-body .card-text {
            color: #555;
        }

        .card-body .fab, .card-body .fas {
            color: #333;
        }

</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-2 bg-light sidebar">
            <div class="d-flex align-items-center py-3">
                <i class="fas fa-circle me-2 text-success"></i>
                <h4 class="m-0">Admin</h4>
            </div>
            <ul class="nav flex-column">

                <li class="nav-item">
                    <a class="nav-link active" asp-action="Index"><i class="fa-duotone fa-solid fa-table-columns"></i> Dashboard</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-action="Staff"><i class="fas fa-solid fa-users me-2"></i> Manage-Staff</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-action="Users"> <i class="fa-solid fa-users"></i> Users</a>
                </li>

               
            </ul>
        </div>
        <div class="col-10 p-0">
            <div class="image-container">
                <img class="main" src="~/Images/admin.jpg" alt="consultant" />
            </div>
        </div>

        
    </div>
</div>


<!-- Modals -->


<div class="modal fade" id="deleteTransactionModal" tabindex="-1" aria-labelledby="deleteTransactionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteTransactionModalLabel">Delete Transaction</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this transaction?</p>
                <p>Amount: R<span id="transactionAmount"></span></p>
            </div>
            <div class="modal-footer">
                <form asp-action="DeleteTransaction" method="post">
                    <input type="hidden" id="transactionIdInput" name="id" value="" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    <script>
        function openDeleteModal(transactionId, amount) {
            document.getElementById('transactionIdInput').value = transactionId;
            document.getElementById('transactionAmount').textContent = amount;
            var modal = new bootstrap.Modal(document.getElementById('deleteTransactionModal'));
            modal.show();
        }
    </script>
}

