@using _2024FinalYearProject.Models.ViewModels.Admin
@model ReportViewModel

@{
    ViewBag.Title = "Financial Avice";
}

<style>
    .sidebar {
        height: 100vh;
    }


    i {
        color: #007bff;
    }

    .ImagesColor {
        color: #1a2b3c;
    }

    .sidebar h4 {
        font-weight: bold;
    }

    .sidebar .nav-link {
        font-size: 1.1rem;
        font-weight: 500;
        padding: 15px 20px;
        color: #333;
    }

        .sidebar .nav-link.active {
            background-color: #eaf3e2;
            color: #333;
            font-weight: bold;
        }

    .card {
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .search-bar input {
        border-radius: 30px;
        padding-left: 15px;
        width: 250px;
    }

    .card-body {
        position: relative;
    }

        .card-body .card-title {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .card-body .card-text {
            color: #555;
        }

        .card-body .fab, .card-body .fas {
            color: #333;
        }

</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-2 bg-light sidebar">
            <div class="d-flex align-items-center py-3">
                <i class="fas fa-circle me-2 text-success"></i>
                <h4 class="m-0">Admin</h4>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link " asp-action="Index"><i class="fa-duotone fa-solid fa-table-columns"></i> Dashboard</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link active" asp-action="Staff"><i class="fas fa-solid fa-users me-2"></i> Manage-Staff</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-action="Users"> <i class="fa-solid fa-users"></i> Users</a>
                </li>

               
            </ul>
        </div>
        <div class="col-10 p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4>Hello, Admin</h4>
                    <p>You can see reports  given to clients by @Model.AdviserName </p>
                </div>

            </div>

            <div>
                <a class="btn btn-primary" asp-action="AddStaff">Add Consultant/Financial Advisor</a>
            </div>
            <div class="row">
                <div class="col-12">
                    <table class="table table-striped">
                        <thead>
                            <tr class="highlight">
                                <th scope="col">#</th>
                                <th scope="col">Consultant</th>
                                <th scope="col">Date</th>
                                <th scope="col">Info</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.reports.Count == 0)
                            {
                                <tr>
                                    <td colspan="6" class="text-center">
                                        <i class="fas fa-exclamation-triangle red-icon"></i> No reports found
                                    </td>
                                </tr>
                            }
                            @foreach (var advice in Model.reports)
                            {
                                <tr>
                                    <th scope="row">1</th>
                                    <td>@advice.userName</td>
                                    <td> @advice.Date.ToString("yyyyy-mm-dd")</td>
                                    <td> @advice.Message</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>


    </div>
</div>
