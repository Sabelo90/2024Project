@using _2024FinalYearProject.Models.ViewModels.FinacialAdvisor
@model UsersPageViewModel

@{
    ViewBag.Title = "Admin Users Page";
}

<style>
    .sidebar {
        height: 100vh;
    }

    .ImagesColor {
        color: #1a2b3c;
    }

    .sidebar h4 {
        font-weight: bold;
    }

    .sidebar .nav-link {
        font-size: 1.1rem;
        font-weight: 500;
        padding: 15px 20px;
        color: #333;
    }

        .sidebar .nav-link.active {
            background-color: #eaf3e2;
            color: #333;
            font-weight: bold;
        }

    .card {
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .search-bar input {
        border-radius: 30px;
        padding-left: 15px;
        width: 250px;
    }

    .card-body {
        position: relative;
    }

        .card-body .card-title {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .card-body .card-text {
            color: #555;
        }

        .card-body .fab, .card-body .fas {
            color: #333;
        }

</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-2 bg-light sidebar">
            <div class="d-flex align-items-center py-3">
                <i class="fas fa-circle me-2 text-success"></i>
                <h4 class="m-0">Admin</h4>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index"><i class="fa-duotone fa-solid fa-table-columns"></i> Dashboard</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-action="Staff"><i class="fas fa-solid fa-users me-2"></i> Manage-Staff</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link active" asp-action="Users"> <i class="fa-solid fa-users"></i> Users</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-action="Reviews"><i class="fa-solid fa-star"></i> Reviews</a>
                </li>
            </ul>
        </div>
        <div class="col-10 p-4">
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4>Hello, @Model.User.FirstName</h4>
                    <p>You can select user and  manage here</p>
                </div>

            </div>

            <a class="btn btn-primary" asp-action="UsersReport">Generate Report</a>

            <div class="row">
                <div class="col-12">
                    <table class="table table-striped">
                        <thead>
                            <tr class="highlight">
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Amount</th>
                                <th scope="col">MoneyIn</th>
                                <th scope="col">MoneyOut</th>
                                <th scope="col">Manage</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Users.Count() == 0)
                            {
                                <tr>
                                    <td colspan="6" class="text-center">
                                        <i class="fas fa-exclamation-triangle red-icon"></i> No Users Found
                                    </td>
                                </tr>
                            }
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <th scope="row">1</th>
                                    <td>@user.AppUser.UserName</td>
                                    <td>R @user.BankAccount.Balance.ToString("0.00")</td>
                                    <td>R @user.MoneyIn.ToString("0.00")</td>
                                    <td>R @user.MoneyOut.ToString("0.00")</td>
                                    <td>
                                        <div class="d-inline-block">
                                            <form method="post" asp-action="Wallet">
                                                <input type="hidden" name="Id" value="@user.AppUser.Id">
                                                <button type="submit" class="btn btn-primary btn-sm">
                                                    <i class="fa-solid fa-wallet"></i>Wallet
                                                </button>
                                            </form>
                                        </div>

                                        <div class="d-inline-block">
                                            <form method="get" asp-action="Account">
                                                <input type="hidden" name="Id" value="@user.AppUser.Id">
                                                <button type="submit" class="btn btn-primary btn-sm">
                                                    <i class="fa-solid fa-user"></i>
                                                </button>
                                            </form>
                                        </div>

                                        <div class="d-inline-block">
                                            <form method="get" asp-action="Password">
                                                <input type="hidden" name="Id" value="@user.AppUser.Id">
                                                <button type="submit" class="btn btn-primary btn-sm">
                                                    <i class="fa-solid fa-lock"></i>
                                                </button>
                                            </form>
                                        </div>
                                        <div class="d-inline-block">
                                            <form method="get" asp-action="Transactions">
                                                <input type="hidden" name="Id" value="@user.AppUser.Id">
                                                <button type="submit" class="btn btn-primary btn-sm">
                                                    <i class="fa-solid fa-money-bill-transfer"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>


    </div>
</div>